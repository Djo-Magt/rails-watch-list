<div class="cover mb-4 d-flex align-items-center justify-content-center bg-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('dbz.jpg') %>); background-size: cover; height: 300px">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4">
        <%= link_to "X", list_path(list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
        <%= link_to list_path(list) do %>
          <div class="card mb-4">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) :asset_path('dbz.jpg') %>)">
              <%= list.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

